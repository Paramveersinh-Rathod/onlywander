<style>
    .site-footer {
        background-color: #f8f9fa;
        color: #6c757d;
        padding: 4rem 0;
        border-top: 1px solid #e9ecef;
        font-size: 0.9rem;
    }

    .footer-brand {
        font-family: 'Raleway', sans-serif;
        font-weight: 700;
        font-size: 1.8rem;
        color: #fe424d;
        margin-bottom: 1rem;
    }

    .footer-brand i {
        margin-right: 0.5rem;
    }

    .footer-heading {
        font-weight: 600;
        color: #343a40;
        margin-bottom: 1.25rem;
        font-size: 1rem;
    }

    .footer-links li {
        margin-bottom: 0.75rem;
    }

    .footer-links a {
        text-decoration: none;
        color: #6c757d;
        transition: color 0.2s ease-in-out;
    }

    .footer-links a:hover {
        color: #fe424d;
        text-decoration: underline;
    }

    .newsletter-form .form-control {
        border-right: 0;
        border-radius: 0.5rem 0 0 0.5rem;
    }

    .newsletter-form .btn {
        border-radius: 0 0.5rem 0.5rem 0;
        background-color: #212529;
        color: white;
    }
    
    .footer-socials a {
        color: #6c757d;
        font-size: 1.5rem;
        margin-right: 1rem;
        transition: color 0.2s ease-in-out;
    }

    .footer-socials a:hover {
        color: #fe424d;
    }

    .footer-bottom {
        border-top: 1px solid #e9ecef;
        padding-top: 1.5rem;
        margin-top: 2rem;
    }

    /* --- NEW STYLES FOR FEEDBACK --- */
    .newsletter-feedback {
        font-size: 0.875rem;
        margin-top: 0.5rem;
        height: 1rem; /* Reserve space to prevent layout shift */
    }
    .text-success { color: #198754 !important; }
    .text-danger { color: #dc3545 !important; }
</style>

<footer class="site-footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mb-4 mb-lg-0">
                <h3 class="footer-brand"><i class="fa-solid fa-plane-departure"></i>OnlyWander</h3>
                <p>Your next great adventure is just a few clicks away. Discover and book unique accommodations around the world.</p>
                <div class="footer-socials mt-4">
                    <a href="https://twitter.com" target="_blank"><i class="fa-brands fa-square-twitter"></i></a>
                    <a href="https://facebook.com" target="_blank"><i class="fa-brands fa-square-facebook"></i></a>
                    <a href="https://instagram.com" target="_blank"><i class="fa-brands fa-square-instagram"></i></a>
                </div>
            </div>

            <div class="col-lg-2 col-md-4 col-6 mb-4 mb-lg-0">
                <h5 class="footer-heading">Company</h5>
                <ul class="list-unstyled footer-links">
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/careers">Careers</a></li>
                    <li><a href="/press">Press</a></li>
                    <li><a href="/policies">Policies</a></li>
                </ul>
            </div>

            <div class="col-lg-2 col-md-4 col-6 mb-4 mb-lg-0">
                <h5 class="footer-heading">Explore</h5>
                <ul class="list-unstyled footer-links">
                    <li><a href="/listings">All Listings</a></li>
                    <li><a href="/trending">Trending Destinations</a></li>
                    <li><a href="/giftcards">Gift Cards</a></li>
                    <li><a href="/guides">Travel Guides</a></li>
                </ul>
            </div>

            <div class="col-lg-4 col-md-4">
                <h5 class="footer-heading">Join Our Newsletter</h5>
                <p>Receive the latest deals, reviews, and travel inspiration.</p>
                <form id="newsletterForm" class="newsletter-form">
                    <div class="input-group">
                        <input type="email" id="newsletterEmail" class="form-control" placeholder="Your email address" required>
                        <button class="btn" type="submit" id="newsletterBtn">Subscribe</button>
                    </div>
                    <div id="newsletterFeedback" class="newsletter-feedback"></div>
                </form>
            </div>
        </div>

        <div class="row footer-bottom align-items-center">
            <div class="col-md-6 text-center text-md-start">
                <p class="mb-0">&copy; <%= new Date().getFullYear() %> OnlyWander Private Limited. All rights reserved.</p>
            </div>
            <div class="col-md-6 text-center text-md-end">
                <ul class="list-inline mb-0">
                    <li class="list-inline-item"><a href="/privacy">Privacy</a></li>
                    <li class="list-inline-item">&middot;</li>
                    <li class="list-inline-item"><a href="/terms">Terms</a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const newsletterForm = document.getElementById('newsletterForm');
    const newsletterEmail = document.getElementById('newsletterEmail');
    const newsletterBtn = document.getElementById('newsletterBtn');
    const newsletterFeedback = document.getElementById('newsletterFeedback');

    if (newsletterForm) {
        newsletterForm.addEventListener('submit', (event) => {
            event.preventDefault(); // Stop the form from submitting the traditional way

            const email = newsletterEmail.value;
            
            // Simple email validation regex
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

            if (emailRegex.test(email)) {
                // Success
                newsletterFeedback.textContent = 'Thank you for subscribing!';
                newsletterFeedback.className = 'newsletter-feedback text-success';
                newsletterEmail.value = ''; // Clear the input
                newsletterBtn.textContent = 'Subscribed!';
                newsletterBtn.disabled = true;
            } else {
                // Failure
                newsletterFeedback.textContent = 'Please enter a valid email address.';
                newsletterFeedback.className = 'newsletter-feedback text-danger';
            }
        });
    }
});
</script>
